# Copiar este archivo como .env y completar los valores

# Server Configuration
NODE_ENV=development
PORT=3001

# MongoDB
MONGO_URI_DEV=mongodb+srv://user:password@cluster.mongodb.net/mercadotiendas-dev

# JWT
JWT_SECRET_DEV=your-dev-secret-key

# Google Auth
GOOGLE_CLIENT_ID_DEV=your-google-client-id.apps.googleusercontent.com

# Email Configuration (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Mobbex Configuration
MOBBEX_API_KEY=your-mobbex-api-key
MOBBEX_ACCESS_TOKEN=your-mobbex-access-token
MOBBEX_AUDIT_KEY=your-mobbex-audit-key

# TikTok Login Kit
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=https://yourdomain.com/api/auth/tiktok/callback

# URLs para Mobbex
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000